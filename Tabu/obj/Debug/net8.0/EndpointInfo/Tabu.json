              "schema": {
                "$ref": "#/components/schemas/GameCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GameCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GameCreateDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
